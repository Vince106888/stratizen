rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ===============================
    // User Profile Images
    // ===============================
    match /users/{userId}/{allPaths=**} {
      // Only the user can read/write their own profile images
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ===============================
    // Marketplace Images
    // ===============================
    match /marketplace/{itemId}/{allPaths=**} {
      // Public read access for marketplace listings
      allow read: if true;
      // Only authenticated users can upload/edit
      allow write: if request.auth != null;
    }

    // ===============================
    // Post Images (Stratizen Feed)
    // ===============================
    match /posts/{postId}/{allPaths=**} {
      // Everyone can read post images
      allow read: if true;

      // Only authenticated users can upload
      // (optional: restrict further to "ownerId" if you store it in Firestore)
      allow write: if request.auth != null;
    }
  }
}
